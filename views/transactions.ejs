<%- include('components/header.ejs') %>
    <div class="banner container"></div>
    <div class="container my-5">
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <div class="card">
                    <div class="card-header" style="background-color: #217478; color:#fff;">
                        <h2>All Transactions</h2>
                    </div>
                    <div class="card-body" style="background-color: #F6FCFC;">
                        <ul class="list-group list-group-flush">
                            <% if(a.length> 0) { %>
                                <% for(let c of a) {%>
                                    <li class="list-group-item">
                                        <%= c.payment %> on <strong><%= c.Date.getDate() %>-<%= c.Date.getMonth() %>-<%= c.Date.getFullYear() %></strong> at <strong><%= c.Date.getHours() %>:<%= c.Date.getMinutes() %>:<%= c.Date.getSeconds() %></strong>
                                    </li>
                                    <% } %>
                                        <% } else { %>
                                            <li class="list-group-item" style="text-transform: capitalize;">
                                                No record!!!
                                            </li>
                                            <% } %>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
<%- include('components/footer.ejs') %>