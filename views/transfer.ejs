</style>

<%- include('components/header.ejs') %>

<div class="banner container"></div>

<div class="container">
    <div class="row">
        <div class="col-lg-6 offset-lg-3">
            <div class="card" style="background-color: #F6FCFC;">
                <div class="card-header transfer-top" style="background-color: #217478; color: #fff;">
                    <h1>Tranfer Money</h1>
                </div>
                <div class="card-body">
                    <form action="/customer" method="POST" class="needs-validation" novalidate>
                        <div class="input-group mb-3">
                            <label class="input-group-text" for="form" style="background-color: #217478; color: #fff;">From: </label>
                            <select class="form-select" name="From" id="from">
                                <% for(let c of cus) { %>
                                    <option style="text-transform: capitalize;" value="<%= c.username %>"
                                        <%=c.username===cs.username?'selected':'disabled' %> ><%= c.username %>
                                    </option>
                                    <% } %>
                            </select>
                        </div>
                        <div class="input-group mb-3">
                            <label class="input-group-text" for="cati" style="background-color: #217478; color: #fff;">Transfer to:</label>
                            <select class="form-select" name="username" id="cati">
                                <% for(let c of cus) { %>
                                    <option style="text-transform: capitalize;" value="<%= c.username %>"
                                        <%=c.username===cs.username?'disabled':'' %> ><%= c.username %>
                                    </option>
                                    <% } %>
                            </select>
                        </div>
                        <div class="input-group mb-3">
                            <span class="input-group-text" style="background-color: #217478; color: #fff;">Amount â‚¹</span>
                            <input type="number" class="form-control" name="Amount" required min="0">
                            <span class="input-group-text" style="background-color: #217478; color: #fff;">.00</span>
                            <div class="valid-feedback">
                                Done!
                              </div>
                              <div class="invalid-feedback">
                                Enter Amount
                              </div>
                        </div>
                        <button class="btn btn-success mt-3 me-3" style="background-color: #fff; color: #217478;">Transfer</button>
                        <a class="btn btn-dark mt-3" href="/customer" style="background-color: #fff; color: #217478;">Back to Home</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
